PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir=@PUBRULE@
appname = @PACKAGE@
pubdir = @prefix@
srcdir = @srcdir@

export pubdir utildir appname

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

SUBDIR=  Class Engines

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) $(pubdir)/$(appname)/te_rendering_server $(pubdir)/$(appname)/te_request_server $(rootprefix)/etc/rc.d/init.d/ted $(rootprefix)/etc/cron.d/$(PACKAGE).cron $(rootprefix)/etc/te.conf\
            RELEASE VERSION

$(rootprefix)/etc/cron.d/$(PACKAGE).cron:$(PACKAGE).cron 
	install -D -p -m 0755 $(PACKAGE).cron $@

$(rootprefix)/etc/te.conf:te.conf 
	install -D -p -m 0644 te.conf $@

$(rootprefix)/etc/rc.d/init.d/ted: ted $(rootprefix)/etc/rc.d/init.d
	install -D -p -m 0755 ted $@

$(pubdir)/$(appname)/te_request_server: te_request_server.php
	install -D -p -m 0755 te_request_server.php $@
$(pubdir)/$(appname)/te_rendering_server: te_rendering_server.php
	install -D -p -m 0755 te_rendering_server.php $@

publish: $(rootprefix)/etc/cron.d/$(PACKAGE).cron $(rootprefix)/etc/rc.d/init.d/ted $(pubdir)/$(appname)/te_request_server $(pubdir)/$(appname)/te_rendering_server $(rootprefix)/etc/te.conf