AC_REVISION($Id: configure.in,v 1.5 2008/03/17 10:03:13 eric Exp $)
dnl
dnl Process this file with autoconf to produce a configure script.
dnl
AC_PREREQ(2.13)
AC_INIT(./Makefile.in)
AC_SUBST(VERSION)
VERSION=`cat VERSION`
AC_SUBST(RELEASE)
RELEASE=`cat RELEASE`
AC_SUBST(PACKAGE)
PACKAGE=TE

ac_default_prefix=/usr/share/pear

AC_SUBST(PUBRULE)
PUBRULE=`dirname ~/anakeen/what/.`
AC_ARG_WITH(pubrule,
[  --with-pubrule=dir	Path to PubRule], PUBRULE=$withval)

AC_SUBST(DEBUG)
DEBUG=N
AC_ARG_ENABLE(debug,
[  --enable-debug   Set Debug ], DEBUG=Y)

AC_SUBST(tedinit)
tedinit=ted.fc
AC_ARG_WITH(tedinit,
[  --with-tedinit=init script file  ], tedinit=$withval)


AC_SUBST(rcinit)
rcinit=/etc/rc.d/init.d
AC_ARG_WITH(rcinit,
[  --with-rcinit=init script directory  ], rcinit=$withval)



AC_OUTPUT(Makefile TE.spec ted:$tedinit debian/changelog engine_init.sql)
