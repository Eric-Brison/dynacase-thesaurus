PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir=@PUBRULE@
appname = MAILCONNECTOR
pubdir = @prefix@
srcdir = @srcdir@

export pubdir utildir appname

TAR = gtar
GZIP_ENV = --best
export targetdir PACKAGE

SUBDIR= Class  Images

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) mailconnector.ods \
            RELEASE VERSION 

$(pubdir)/EXTERNALS:
	mkdir $@

$(pubdir)/EXTERNALS/mailconnector.php : mailconnector.php
	cd $(pubdir)/EXTERNALS; \
	ln -s ../$(appname)/$< .

$(pubdir)/$(appname)/mailconnector.ods : mailconnector.ods
	cp $< $(pubdir)/$(appname)

publish: $(pubdir)/$(appname)/mailconnector.ods $(pubdir)/EXTERNALS $(pubdir)/EXTERNALS/mailconnector.php
