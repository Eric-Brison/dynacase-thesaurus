Alias /freedomWS @installdir@

<Directory "@installdir@">
   
    php_value include_path ".:@prefix@:@whatdir@:@whatdir@/WHAT:@nusoapdir@:/usr/share/pear"
    php_value session.use_cookies 1
    php_value session.name "session"
    php_value session.use_trans_sid 0
    php_value post_max_size "80M"
    php_value upload_max_filesize "80M"
    php_value default_charset  "iso-8859-1"
    AddType application/x-httpd-php .php
    DirectoryIndex  freedom-doc.php

    <FilesMatch "\.php$">
      AuthType Basic
      AuthName 'FREEDOM Connection'

      # Uncomment to old distribution
      # AuthPAM_Enabled  on
      # AuthPAM_FallThrough off
      # AuthPAM_Service httpd

      AuthBasicProvider pam
      AuthnPAMService httpd

      Require valid-user
    </FilesMatch>
 
    <FilesMatch "\.wsdl">
       Order Deny,Allow
       Allow from All   
    </FilesMatch>

</Directory>


