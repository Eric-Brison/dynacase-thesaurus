<?xml version="1.0" encoding="utf-8"?>
<module name="freedom-thesaurus" version="@VERSION@" release="@RELEASE@">

  <description lang="en">Thesaurus application to manage and use thesaurus functionnalities in freedom</description>
  <description lang="fr">L'application Thesaurus permet de fournir et gérer les fonctionnalités de thesaurus de Freedom</description>

  <requires>
    <module name="freedom" />
  </requires>

  <post-install>
    <process command="programs/app_post THESAURUS I" />
    <process command="programs/record_application THESAURUS" />
    <process command="programs/app_post THESAURUS U" />
    <process command="programs/update_catalog" />
  </post-install>

  <post-upgrade>
    <process command="programs/pre_migration THESAURUS" />
    <process command="programs/app_post THESAURUS U" />
    <process command="programs/record_application THESAURUS" />
    <process command="programs/post_migration THESAURUS" />
    <process command="programs/update_catalog" />
  </post-upgrade>

</module>