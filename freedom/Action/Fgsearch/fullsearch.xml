[ZONE FDL:HTMLHEAD?title=[searchtitle]]
<style>
SELECT.little { font-size:90%; }
div.logo { margin-top:-20px;  float:left; width:20%; z-index:100; text-align:center; }
img.logomini { height:70px; padding-left:20px; }
div.zsearch { margin-top:20px;}
div.searchp { float:left; padding:0px 5px 0px 5px; text-align:right; }
div.searchc { float:left; padding:0px 5px 0px 5px; text-align:left; }
div.searchm { float:left; padding:0px 15px 0px 15px; text-align:left; }

.bresume { 
  background-color:[COLOR_B8]; 
  border-color:[COLOR_B4]; 
  border-style:solid;
  border-width:1px 0px 1px 0px;width:50%; 
  padding:0px 5px 0px 5px;
}
.left { text-align:left; }
.right { text-align:right; }
</style>
[ZONE FGSEARCH:FGSEARCH_ADDSEARCH]
<form  id="fedit"  
       class="fborder" style="display:inline"
       name="searchdoc"       
       target="_self"
       method="POST" ENCTYPE="multipart/form-data" 
       action="[CORE_STANDURL]&app=FGSEARCH&action=FULLSEARCH" >
<input type="hidden" name="start" value="0">
<input type="hidden" name="dirid" value="[dirid]">

[IF viewform]
<div style="text-align:right">
<a style="font-size:80%; "  onclick="addFreedomEngine()" type="text/smartbookmark" rel="[CORE_STANDURL]&app=FGSEARH&action=FULLSEARCH&keyword=%s" title="[TEXT:Add search engine to your browser]">[TEXT:Add search engine]</a>
</div>

<div id="searchzone" class="zsearch">

<div class="logo"><img class="logomini" align="middle" needresize="1"  src="[IMG:fgsearch.png]"></div>
<div class="searchp">
<div><input name="keyword" type="text" size="30" value="[key]"></div>
<div><select  class="little"   name="famid" ><option VALUE="0" >[TEXT:any familly]</option>
        [BLOCK SELECTCLASS]<option [famselect] VALUE="[idcdoc]" >[classname]</option>   
        [ENDBLOCK SELECTCLASS]
      </select></div>
</div>

<div class="searchc">
  <input type="submit" value="[TEXT:ToSearch]">
</div>
<div class="searchm">
<a href="[CORE_STANDURL]app=FGSEARCH&action=FULLEDITDSEARCH&famid=[famid]">[TEXT:Advanced search]</a>
</div>

</div>

<div style="clear:both"></div>
[ENDIF viewform]

<table cellspacing="0" cellpadding="0"  cellborder="0" style="width:100%; margin:10px 0px 5px 0px; padding:0">
<tr>
<td class="bresume left">[CORE_CLIENT]</td>
<td class="bresume right">[resulttext]</td>
</tr>
</table>

[BLOCK DOCS]
<div ><img align="left" needresize="1" src="[iconsrc]" width="48px"> <a target="T[id]" href="[CORE_STANDURL]&app=FDL&action=FDL_CARD&id=[id]">[title]</a> <i>[mdate]</i><br >[htext]</div><br style="clear:both">
[ENDBLOCK DOCS]
<div style="text-align:center;border-top-color:[COLOR_B4];border-top-style:solid;border-top-width:1px">
[IF notfirst]
 <a onclick="document.searchdoc.start.value=[pstart];document.searchdoc.submit()">  <img style="border:none" align="absbottom"  src="[IMG:freeleft.png]"> [TEXT:Previous]</a>[ENDIF notfirst] 
[BLOCK PAGES]<a  onclick="document.searchdoc.start.value=[xstart];document.searchdoc.submit()">[xpage] </a>[ENDBLOCK PAGES] <b>[cpage]</b>
 <a onclick="document.searchdoc.start.value=[nstart];document.searchdoc.submit()"> [IF notthenend][TEXT:Next] <img style="border:none" align="absbottom"  src="[IMG:freeright.png]"></a>[ENDIF notthenend]</div>
</form>
[ZONE FDL:HTMLFOOT]
