[ZONE FDL:HTMLHEAD]

<script>
function SelectFile(src) {
        // window.opener.SetUrl( url, width, height, alt);
        window.opener.SetUrl( window.location.pathname+src ) ;
        window.close() ;
}
</script>
<style>
DIV.images {
  width:100px;
  height:120px;
  overflow:hidden;
  float:left;
  border:1px solid [COLOR_BLACK];
  padding:10px;
  margin:2px;
  background-color:[COLOR_WHITE];
  cursor:pointer;
  -moz-border-radius:4px;
  text-align:center;
  vertical-align:middle;
  font-size:[SIZE_X-SMALL];
}

DIV.images:hover {
  background-color:[COLOR_C3];
}
</style>
[IF morepages]
<div style="position:fixed">
<table style="width:100%"><tr><td style="text-align:left;width:33%">[IF hppage]<a href="[CORE_STANDURL]app=FDL&action=FCKIMAGE&page=[ppage]">[TEXT:Previous]</a>[ENDIF hppage]</td><td style="text-align:center;;width:33%">[TEXT:Page] [cpage]
<form style="display:inline" name="fkey"
      method="POST" ENCTYPE="multipart/form-data"
      action="[CORE_STANDURL]&app=FDL&action=FCKIMAGE" >
<input title="[TEXT:keyword filter]" type="text" name="key" value="[key]"></form>
</td><td style="text-align:right">[IF npage]<a href="[CORE_STANDURL]app=FDL&action=FCKIMAGE&page=[npage]">[TEXT:Next]</a>
[ENDIF npage]</td></tr></table>
</div><br><br>[ENDIF morepages]
[IFNOT morepages]
<div style="text-align:center"><form name="fkey" style="display:inline"
      method="POST" ENCTYPE="multipart/form-data"
      action="[CORE_STANDURL]&app=FDL&action=FCKIMAGE" >
<input title="[TEXT:keyword filter]" type="text" name="key" value="[key]"></form></div>
[ENDIF morepages]
[BLOCK IMAGES]

<div class="images">
<img style="max-width:100px;" onclick="SelectFile('[imgsrc]')"   src="[imgcachesrc]"><br>[title]
</div>
[ENDBLOCK IMAGES]
<script>document.fkey.key.focus();</script>


[IF NOIMAGES]
<h1 style="text-align:center">[TEXT:No results]</h1>
[ENDIF NOIMAGES]
[ZONE FDL:HTMLFOOT]
