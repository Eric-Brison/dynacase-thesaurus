if (! isNetscape) displaytable='inline'
else displaytable='table-row'



function refreshfld(dirid) {
   if (dirid > 0 )
   top.fhidden.document.location.href='[CORE_STANDURL]&app=[APPNAME]&action=EXPANDFLD&dirid='+dirid;
