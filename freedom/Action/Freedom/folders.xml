    drag=1;
    cdocid = parent.flist.document.docid;
    parent.flist.document.drag=0;
    imicon = parent.flist.document.getElementById('micon');
    micon.src=imicon.src;
    //    alert(micon.src);
    imicon.style.visibility="hidden";
    parent.flist.document.drag=0;
  }
}
function endDrag() {

  
    drag=0;
    micon.style.visibility="hidden";

}
