<!-- JAVASCRIPT -->
<script>
function casreload(event,th) {
  var i,dsel=-1;
                                                                                                                                                             
                                                                                                                                                             
  for (i=0;i<th.options.length;i++) {
    if (th.options[i].defaultSelected) dsel=i;
  }
  if (th.selectedIndex != dsel) {
    //alert('reload');
                                                                                                                                                             
  f =document.modifydoc;
  // modify to initial action
  f.ireload.value=th.id;
  f.action = document.location.href;
  f.target='_self';
  f.submit();
                                                                                                                                                             
  }
}


function SwitchZone(view) {                                                                                                                                                             
 var zones = new Array ( 'userzone', 'iuserzone', 'societyzone');
                                                                                                                                                           
  for (zx in zones) {
    z = zones[zx];
    document.getElementById(z).style.display = 'none';   
    if (z == view) {
      document.getElementById(view).style.display = '';     
    }
  }                                                                                                                                                             
}


function OpenDetail(view) {
  detail = document.getElementById('press');
  view = document.getElementById(view);
  
  if (view.style.display == "none"){ view.style.display = "";
  } else { 
    view.style.display = "none";
   }

}

                                                                                                                                                             
</script>

