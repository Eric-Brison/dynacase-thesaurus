<script language="JavaScript1.2">
function SendSearch(e) {

     var keyCode;

     if (window.event) keyCode=window.event.keyCode;
     else keyCode = e.which;

     if (keyCode==13) {
        document.location.href='[CORE_STANDURL]app=USERCARD&action=USERCARD_SEARCH&catg=[catg]&keyword='+document.getElementById('keyword').value;
     }
}

</script>   
<!-- ------------ MENU SEARCH  --------------------- -->
<div  id="searchmenu" class="popup">
<a id="text"></a>
  <input  onMouseUp="return true" onKeyPress="SendSearch(event)" type="text" id="keyword">
</div>


