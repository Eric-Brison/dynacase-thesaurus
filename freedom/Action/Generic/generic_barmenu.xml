<script language="JavaScript1.2">
function SendSearch(e) {

     var keyCode;

     if (window.event) keyCode=window.event.keyCode;
     else keyCode = e.which;

     if (keyCode==13) {
        document.location.href='[CORE_STANDURL]app=[APPNAME]&action=GENERIC_SEARCH&dirid=[dirid]&catg=[catg]&keyword='+document.getElementById('keyword').value;
     }
}

</script>   
