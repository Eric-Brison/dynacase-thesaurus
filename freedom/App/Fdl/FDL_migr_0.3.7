#!/bin/bash
if [ "$dbpsql" == "" ]; then
    #load environement variable for freedom
  . /etc/freedom.conf
   wchoose -b
fi
 

psql $dbfree -f $wpub/WHAT/getprivilege.sql
/usr/bin/php -q $wpub/API/updateclass.php --dbname=freedom --appc=FDL --class=VGroup
/usr/bin/php -q $wpub/API/updateclass.php --dbname=freedom --class=Group

echo "alter table doc add column dprofid int;" | psql $dbfree

echo "insert into permission (select id_user,p1.id_application,acl.id from permission p1, acl where acl.name='FREEDOM_GED' and id_acl in (select id from acl where name = 'FREEDOM') and acl.id_application = p1.id_application);" | psql $dbpsql
