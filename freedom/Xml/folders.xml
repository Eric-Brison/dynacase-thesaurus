var micon;
var cdocid=0;
function initDrag() {

  if (parent.info.document.drag == 1) {
    drag=1;
    cdocid = parent.info.document.docid;
    parent.info.document.drag=0;
    imicon = parent.info.document.getElementById('micon');
    micon.src=imicon.src;
    //    alert(micon.src);
    imicon.style.visibility="hidden";
    parent.info.document.drag=0;
  }
}
function endDrag() {

  
    drag=0;
    micon.style.visibility="hidden";

}
function initmicon() {

  micon = document.getElementById('micon');

}
