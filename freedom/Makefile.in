PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir=@PUBRULE@
appname = @PACKAGE@
pubdir = @prefix@
srcdir = @srcdir@

export pubdir utildir appname

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

SUBDIR= Xml Images Css Action JavaScript Class Zone

include $(utildir)/PubRule

DISTFILES = $(SUBDIR) configure.in $(PACKAGE).app init.freedom\
            $(PACKAGE)_init.php.in Makefile.in $(PACKAGE).spec.in \
            VERSION RELEASE $(PACKAGE).vault \
	    $(PACKAGE)_en.po $(PACKAGE)_fr.po 



$(pubdir)/$(appname)/init.freedom : init.freedom
	cp $< $(pubdir)/$(appname)
$(pubdir)/$(appname)/$(PACKAGE).vault : $(PACKAGE).vault
	cp $< $(pubdir)/$(appname)
publish: $(pubdir)/$(appname)/init.freedom $(pubdir)/$(appname)/$(PACKAGE).vault

