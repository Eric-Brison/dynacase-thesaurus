PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir=@PUBRULE@
appname = @PACKAGE@
pubdir = @prefix@
srcdir = @srcdir@
applib = FDL
rootprefix=$(RPM_BUILD_ROOT)
export pubdir utildir appname applib

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

SUBDIR=  Class Zone Action JavaScript Css JavaScript  App Api Share Images 

include $(utildir)/PubRule

DISTFILES = $(SUBDIR) \
            $(wildcard *.in) \
            VERSION RELEASE $(PACKAGE).vault $(PACKAGE).cron \
	    $(PACKAGE)_en.po $(PACKAGE)_fr.po 


$(pubdir)/$(applib) :
	mkdir -p $@

$(rootprefix)/etc/cron.daily:
	mkdir -p $@

$(rootprefix)/etc/cron.daily/$(PACKAGE).cron:$(PACKAGE).cron $(rootprefix)/etc/cron.daily
	cp $(PACKAGE).cron $@

$(pubdir)/$(applib)/FREEDOM.vault : FREEDOM.vault
	cp $< $(pubdir)/$(applib)/$<
publish: $(pubdir)/$(applib)  $(pubdir)/$(applib)/FREEDOM.vault $(rootprefix)/etc/cron.daily/$(PACKAGE).cron
