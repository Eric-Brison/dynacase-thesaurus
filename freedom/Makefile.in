PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir=@PUBRULE@
appname = @PACKAGE@
pubdir = @prefix@
srcdir = @srcdir@
applib = FDL

export pubdir utildir appname applib

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

SUBDIR= Doc Class  Images Action JavaScript Css JavaScript Zone App Api

include $(utildir)/PubRule

DISTFILES = $(SUBDIR) \
            $(wildcard *.in) \
            VERSION RELEASE $(PACKAGE).vault \
	    $(PACKAGE)_en.po $(PACKAGE)_fr.po 


$(pubdir)/$(applib) :
	mkdir -p $@

$(pubdir)/$(applib)/FREEDOM.vault : FREEDOM.vault
	cp $< $(pubdir)/$(applib)/$<
publish: $(pubdir)/$(applib)  $(pubdir)/$(applib)/FREEDOM.vault
