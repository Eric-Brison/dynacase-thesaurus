PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir=@PUBRULE@
appname = @PACKAGE@
pubdir = @prefix@
srcdir = @srcdir@
applib = FDL

export pubdir utildir appname applib

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

SUBDIR= Class  Images Action JavaScript Css JavaScript  Zone App

include $(utildir)/PubRule

DISTFILES = init.freedom $(SUBDIR) \
            $(wildcard *.in) \
            VERSION RELEASE $(PACKAGE).vault \
	    $(PACKAGE)_en.po $(PACKAGE)_fr.po 


$(pubdir)/$(applib) :
	mkdir -p $@

$(pubdir)/$(applib)/init.freedom : $(pubdir)/$(applib) init.freedom
	cp  init.freedom $(pubdir)/$(applib)/init.freedom
$(pubdir)/$(applib)/FREEDOM.vault : FREEDOM.vault
	cp $< $(pubdir)/$(applib)/$<
publish: $(pubdir)/$(applib) $(pubdir)/$(applib)/init.freedom $(pubdir)/$(applib)/FREEDOM.vault
