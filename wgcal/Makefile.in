PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir = @PUBRULE@
appname = @PACKAGE@
pubdir  = @prefix@
srcdir  = @srcdir@


export pubdir utildir appname

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

SUBDIR=  Class Images Zone Xml Action Css Javascript Families Themes OSync Batch

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) \
	$(PACKAGE).app \
        RELEASE VERSION \
	Families/wgcal.csv \
	73_mod_wgcalosync.conf

$(pubdir)/$(appname)/73_mod_wgcalosync.conf : 73_mod_wgcalosync.conf
	cp $< $@

$(pubdir)/EXTERNALS :
	mkdir -p $@

$(pubdir)/EXTERNALS/WGCAL_external.php: $(pubdir)/EXTERNALS 
	cp Families/$(appname)_external.php $(pubdir)/EXTERNALS/WGCAL_external.php

$(pubdir)/$(appname)/wgcal.csv : Families/wgcal.csv 
	cp Families/wgcal.csv $(pubdir)/$(appname)

publish: $(pubdir)/$(appname)/wgcal.csv \
	$(pubdir)/EXTERNALS/WGCAL_external.php \
	$(pubdir)/$(appname)/73_mod_wgcalosync.conf 

clean:
	rm -f config.log config.status configure WGCAL-*.tar.gz WGCAL_init.php WGCAL.spec 
	rm -rf autom4te-2.53.cache
	find . -name \*~  -exec rm {} \;
