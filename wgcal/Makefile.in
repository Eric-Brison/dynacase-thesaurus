PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir = @PUBRULE@
appname = @PACKAGE@
pubdir  = @prefix@
srcdir  = @srcdir@


export pubdir utildir appname

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

SUBDIR=  Class Images Zone Xml Action Css Javascript Families Themes

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) \
	$(PACKAGE).app \
        RELEASE VERSION \
	Families/calevent.csv

$(pubdir)/EXTERNALS :
	mkdir -p $@

$(pubdir)/EXTERNALS/WGCAL_external.php: $(pubdir)/EXTERNALS 
	cp Families/$(appname)_external.php $(pubdir)/EXTERNALS/WGCAL_external.php

$(pubdir)/$(appname)/calevent.csv : Families/calevent.csv 
	cp Families/calevent.csv $(pubdir)/$(appname)

publish: $(pubdir)/$(appname)/calevent.csv $(pubdir)/EXTERNALS/WGCAL_external.php

clean:
	rm -f config.log config.status configure WGCAL-*.tar.gz WGCAL_init.php WGCAL.spec 
	rm -rf autom4te-2.53.cache
	find . -name \*~  -exec rm {} \;
