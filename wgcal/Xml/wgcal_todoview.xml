[ZONE WGCAL:WGCAL_HTMLHEAD]
<form style="display:none" id="tododone" name="tododone" method="POST" target="_self" action="[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODODONE"><input type="hidden" value="-1" name="idtodo" id="idtodo"></form>
<div width="100%" id="btodo" style="cursor:default" class="wToolButtonUnselect">
<table cellspacing="0" cellpadding="0" width="100%"><tr>
<td>[TEXT:my todo] ([todocount])</td>
<td align="right"><img id="addTodo" class="wSmallButton" onclick="subwindow(300, 400, 'AddTodo', '[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODOEDIT&RZ=HV&target=icaltodo&idtodo=-1');" src="[IMG:todo-new.gif]" title="[TEXT:add a todo]">&nbsp;</td>
</tr>
</table></div>

[IFNOT Todos]<div class="WGCRessDefault">[TEXT: no todo][ENDIF Todos]
[IF Todos]<div class="wToolArea" style="overflow:scroll" >
<table width="100%" cellspacing="0">
[BLOCK TodoList]
<tr class="tododef" onmouseover="this.className='todoover'" onmouseout="this.className='tododef'" title="[lTextTodo] [IF warning]([TEXT:todo warning])[ENDIF warning][IF alert]([TEXT:todo alert])[ENDIF alert]">
<td><img src="[IMG:todo-done.gif]" style="cursor:pointer;border:0px" title="[TEXT:todo done]" height="15" onclick="if (confirm('[TEXT:todo] : [jsTextTodo]\n[TEXT:set to done] ? ')) document.getElementById('idtodo').value = [idTodo]; document.getElementById('tododone').submit();"></td>
<td onClick="subwindow(300, 400, 'AddTodo', '[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODOEDIT&target=icaltodo&idtodo=[idTodo]');" >[sTextTodo]</td>
<td style="font-size:80%; border-color: [colorTodo]; border-style: none solid solid none; border-width:1px">[dateTodo]</td>
</tr>[ENDBLOCK TodoList]</table>
</div>[ENDIF Todos]
[ZONE WGCAL:WGCAL_HTMLFOOT]
