[IFNOT standalone]
<table class="wToolButton" onmouseover="this.className='wToolButtonOver'" onmouseout="this.className='wToolButton'" width="100%" cellspacing="0" cellpadding="0">
<tr>
<td onclick="WGCalChangeVisibility('todo');" align="left">[TEXT:my todo] ([todocount])</td>
<td align="right" width="50">
<img id="allTodo" style="cursor:pointer;" onclick="subwindow(300, 400, 'AllTodo', '[CORE_STANDURL]&app=WGCAL&action=WGCAL_ALLTODO');" height="15" src="WGCAL/Images/todo-all.png" title="[TEXT:view all todo]">
<img id="addTodo" style="cursor:pointer;" onclick="subwindow(300, 400, 'AddTodo', '[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODOEDIT');" height="15" src="WGCAL/Images/todo-new.png" title="[TEXT:add a todo]">
</td></tr>
</table>
<div id="todo" style="display:[vtodo]" class="wToolArea">[ENDIF standalone]

<div style="display:none"><form id="tododone" target="wgcal_toolbar" name="tododone" method="POST" action="[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODODONE">
<input type="hidden" value="-1" name="idtodo" id="idtodo">
</form></div>

<table width="100%" cellspacing="0px" cellpadding="0%">

[IFNOT Todos]<tr><td>[TEXT: no todo]</td></tr>[ENDIF Todos]

[BLOCK TodoList]
<tr title="[lTextTodo]">
  <td width="15"><img src="WGCAL/Images/todo-done.png" style="cursor:pointer;border:0px"
           title="[TEXT:todo done]" height="12" onclick="if (confirm('[TEXT:todo] : [jsTextTodo]\n[TEXT:set to done] ? ')) document.getElementById('idtodo').value = [idTodo]; document.getElementById('tododone').submit();"></td>
  <td width="15">
      [IF warning]<img src="WGCAL/Images/todo-warning.png" style="cursor:pointer;border:0px" title="[TEXT:todo warning] [dateTodo]" height="12" >[ENDIF warning]
      [IF alert]<img src="WGCAL/Images/todo-alert.png" style="cursor:pointer;border:0px" title="[TEXT:todo alert]" height="12" >[ENDIF alert]
  </td>
  <td id="[idTodo]" onmouseover="this.className='WGCRessOver'" onmouseout="this.className='WGCRessDefault'" class="WGCRessDefault" 
      onClick="subwindow(300, 400, 'AddTodo', '[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODOEDIT&idtodo=[idTodo]');">[dateTodo] : [sTextTodo]</td>
</tr>
[ENDBLOCK TodoList]

</table>

[IFNOT standalone]</div>[ENDIF standalone]
