[IFNOT standalone]
<table class="wToolButton" onmouseover="this.className='wToolButtonOver'" onmouseout="this.className='wToolButton'" width="100%" cellspacing="0" cellpadding="0">
<tr>
<td onclick="WGCalChangeVisibility('todo');" align="left">[TEXT:my todo] ([todocount])</td>
<td align="right" width="50">
<img id="allTodo" style="cursor:pointer;" onclick="subwindow(300, 400, 'AllTodo', '[CORE_STANDURL]&app=WGCAL&action=WGCAL_ALLTODO');" height="15" src="[IMG:todo-all.gif]" title="[TEXT:view all todo]">
<img id="addTodo" style="cursor:pointer;" onclick="subwindow(300, 400, 'AddTodo', '[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODOEDIT');" height="15" src="[IMG:todo-new.gif]" title="[TEXT:add a todo]">
</td></tr>
</table>
<div id="todo" style="display:[vtodo]" class="wToolArea">[ENDIF standalone]

<div style="display:none"><form id="tododone" target="wgcal_toolbar" name="tododone" method="POST" action="[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODODONE">
<input type="hidden" value="-1" name="idtodo" id="idtodo">
</form></div>

[IFNOT Todos]<div class="WGCRessDefault"[TEXT: no todo]</div>[ENDIF Todos]

[BLOCK TodoList]
<div class="WGCRessDefault" onmouseover="this.className='WGCRessOver'" onmouseout="this.className='WGCRessDefault'">
<table width="100%" cellspacing="0px" cellpadding="0%">
<tr class="WGCRessDefault" onmouseover="this.className='WGCRessOver'" onmouseout="this.className='WGCRessDefault'"
    title="[lTextTodo] [IF warning]([TEXT:todo warning])[ENDIF warning][IF alert]([TEXT:todo alert])[ENDIF alert]">
  <td width="15"><img src="[IMG:todo-done.gif]" style="cursor:pointer;border:0px"
           title="[TEXT:todo done]" height="12" onclick="if (confirm('[TEXT:todo] : [jsTextTodo]\n[TEXT:set to done] ? ')) document.getElementById('idtodo').value = [idTodo]; document.getElementById('tododone').submit();"></td>
  <td id="[idTodo]" style="border-left:3px solid [colorTodo];" 
      onClick="subwindow(300, 400, 'AddTodo', '[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODOEDIT&idtodo=[idTodo]');">&nbsp;[sTextTodo]</td>
  <td onClick="subwindow(300, 400, 'AddTodo', '[CORE_STANDURL]&app=WGCAL&action=WGCAL_TODOEDIT&idtodo=[idTodo]');" align="right">([dateTodo])</td>
</tr>
</table>
</div>
[ENDBLOCK TodoList]


[IFNOT standalone]</div>[ENDIF standalone]
