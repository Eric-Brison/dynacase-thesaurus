<h4>[TEXT: interface look]</h4>


<script>
var colpick = new ColorPicker();
colpick.writeDiv();
function settcolor(dyn) {
  var cc = document.getElementById('tcolchooser');
  if (dyn) {
    cc.style.visibility = 'hidden';
    changeUPref('[uid]', 'WGCAL_U_EVENTTEXTCOLOR', '', '', '');
  } else {
     cc.style.visibility = 'visible';
  }
}

function pickColor(color) {
  document.getElementById('tcolchooser').style.background = color;
  changeUPref('[uid]', 'WGCAL_U_EVENTTEXTCOLOR', color, '', '');
}
</script>


