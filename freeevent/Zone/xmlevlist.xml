<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE eventdesc [
<!ELEMENT eventdesc (stlist, menu, (event)+)>
<!ELEMENT stlist EMPTY>
<!ELEMENT menu (item+)>
<!ELEMENT item (label, description, action)>
<!ELEMENT label (#PCDATA)>
<!ELEMENT description (#PCDATA)>
<!ELEMENT action (#PCDATA)>
<!ELEMENT event (menuref, title, content)>
<!ELEMENT event (styleinfo, chtml)>
<!ELEMENT styleinfo (style)+>
<!ELEMENT style (#PCDATA)>
<!ELEMENT chtml (#PCDATA)>
]>
<eventdesc>
<stlist start="[start]" end="[end]" readablestart="[fstart]" readableend="[fend]" uptime="[uptime]"/>
[IF withMenu]<menu id="menuname">
[BLOCK items]<item id="[itemname]" status="[itemstatus]" type="[itemtype]" [IF hasIcon]ico="[itemico]"[ENDIF hasIcon]>
<label>[itemlabel]</label>
<description>[itemdescription]</description>
<action aid="[actionid]" amode="[actionmode]" aevent="[actionevent]" atarget="[actiontarget]" ascript="[actionscript]"/>
</item>[ENDBLOCK items]
</menu>[ENDIF withMenu]
[BLOCK EVENTS][cevent]
[ENDBLOCK EVENTS]
</eventdesc>
