<VirtualHost @IP@>
ServerName @VIRTUALNAME@
SetEnv freedom_context @DBNAME@
<Directory "@prefix@">
    <Files ~ "index.php">
      AuthType Basic
      AuthName '@Dbname@ Connection'
      AuthBasicProvider pam
      AuthnPAMService httpd_@dbname@
      Require valid-user
    </Files>
   <FilesMatch "expire.shtml|chgpasswd.php">
      Allow from All   
      AuthType Basic
      AuthName '@Dbname@ Connection'      
      AuthBasicProvider pam
      AuthnPAMService httpdwa_@dbname@
      Require valid-user
    </FilesMatch>
</Directory>
</VirtualHost>
