[IF havemotd]<div class="rubrique" style="background:[CORE_BGCOLOR]" width="100%">
[motd][IF canEdit]&nbsp;<img width="16" src="[IMG:ng_motd_edit.png]" class="ngbutton" onclick="document.getElementById('motdedit').style.display='';">[ENDIF canEdit]
</div>[ENDIF havemotd]
[IF canEdit]
<script language="JavaScript" src="htmlarea/htmlarea.js"></script>
<script language="JavaScript" src="htmlarea/htmlarea-lang-en.js"></script>
<div id="motdedit" class="rubrique" style="position: absolute; border:3px groove; padding:10px; display:none" >
<form name="motdedit" method="POST" target="_self" action="[CORE_STANDURL]app=CORE&action=NG_MOTDCHANGE">
<table cellspacing="0">
<tr><td class="rubrique_subtitle">[TEXT:mot edition]</td></tr>
<tr><td></td></tr>
<tr><td><textarea cols="40" title="[TEXT:mot edition]" rows="3" id="motd" name="motd"></textarea>

<textarea  onchange="document.isChanged=true"   style="width:100%" rows="20"   name="motd"  id="motd"  >[motdv]</textarea>
<script >var motd = new HTMLArea('motd');setTimeout("motd.generate()",500)</script>
</td></tr>
<tr><td></td></tr>
<tr><td align="right">
<input class="ngbutton ngbuttonb" type="button" value="[TEXT:save]" onclick="this.form.submit(); document.getElementById('motdedit').style.display = 'none'">
&nbsp;
<input class="ngbutton ngbuttonb" type="button" value="[TEXT:close]" onclick="document.getElementById('motdedit').style.display = 'none'">
</td></tr>
</table>
</form>
</div>[ENDIF canEdit]

