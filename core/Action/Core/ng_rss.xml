
[IF ShowHeader]
<div class="rubrique" width="100%">
<div class="rubrique_title"><img class="ngbutton" width="25px" valign="absmiddle" src="[IMG:ng_rss.png]" border="0" onclick="editRss('rssfed');">&nbsp;[TEXT:rss box]
<select id="rsslist" onchange="showRss(this.selectedIndex);">
[BLOCK RSSLINK]
<option value="[rssid]">[rsstitle][ENDBLOCK RSSLINK]</select>
</div>

<div class="rubrique_title" style="border:3px groove; padding:10px; display:none" id="rssfed" ></div>

<iframe  name="rssdisplay"  width="100%" height="350px" style="border:0" src=""></iframe>
<script language="JavaScript">
function editRss(tg) {

  var url = '[CORE_SSTANDURL]&sole=Y&app=CORE&action=NG_RSSEDIT&tg='+tg;

  if (window.XMLHttpRequest) req = new XMLHttpRequest();
  else if (window.ActiveXObject) {
    isIE = true;
    req = new ActiveXObject("Microsoft.XMLHTTP");
  }	
  if (req) {
    req.onload = function(event) {
      var self = event.target;
      document.getElementById('rssfed').innerHTML = self.responseText;
      document.getElementById('rssfed').style.position = 'absolute';  
      document.getElementById('rssfed').style.display = '';  
    }
    req.open("GET", url, true);
    req.overrideMimeType('text/xml');
    req.send(null);
  }
}

function showRss(rssid) {
  if (rssid>0) {
    var nurl='[CORE_SSTANDURL]app=CORE&action=NG_RSS&rss='+rssid;
    window.rssdisplay.location.replace(nurl);
  }
  return;
}
</script>
[ENDIF ShowHeader]

[IF ShowContent]
[ZONE CORE:HTMLHEAD]
[BLOCK RSSNEWS]
<div class="rss_content">&bull;&nbsp;<a class="nglink" href="[link]" target="_rss">[title]</a></div>[ENDBLOCK RSSNEWS]
[ZONE CORE:HTMLFOOT]
[ENDIF ShowContent]
