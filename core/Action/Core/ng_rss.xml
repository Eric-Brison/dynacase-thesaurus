
[IF ShowHeader]
<div class="rubrique" width="100%">
<div class="rubrique_title"><img width="25px" valign="absmiddle" src="[IMG:ng_rss.png]" border="0">&nbsp;[TEXT:rss box]
<select onchange="showRss(this.selectedIndex);">
[BLOCK RSSLINK]
<option value="[rssid]">[rsstitle][ENDBLOCK RSSLINK]</select>
</div>

<iframe  name="rssdisplay"  width="100%" height="350px" style="border:0" src=""></iframe>
<script language="JavaScript">
function showRss(rssid) {
  if (rssid>0) {
    var nurl='[CORE_SSTANDURL]app=CORE&action=NG_RSS&rss='+rssid;
    window.rssdisplay.location.replace(nurl);
  }
  return;
}
</script>
[ENDIF ShowHeader]

[IF ShowContent]
[ZONE CORE:HTMLHEAD]
[BLOCK RSSNEWS]
<div class="rss_content">&bull;&nbsp;<a class="nglink" href="[link]" target="_rss">[title]</a></div>[ENDBLOCK RSSNEWS]
[ZONE CORE:HTMLFOOT]
[ENDIF ShowContent]
