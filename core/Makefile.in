PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir=@PUBRULE@
appname = @PACKAGE@
pubdir = @prefix@
srcdir = @srcdir@
rootprefix=$(RPM_BUILD_ROOT)


export pubdir utildir appname pidir

TAR = gtar
GZIP_ENV = --best



export targetdir
export utildir

SUBDIR= Class Action Zone Share App Api Images Style 

TOP_MODULES = index.php wsh.php  guest.php dbaccess.php apache.conf  whattext wcheck wstop wstart


include $(utildir)/PubRule

DISTFILES += $(SUBDIR)  \
             ChangeLog  VERSION RELEASE \
	     whattext wcheck wstop wstart httpd.pam



$(pubdir)/whattext: whattext
	cp $< $@
$(pubdir)/wcheck: wcheck
	cp $< $@
$(pubdir)/wstop: wstop
	cp $< $@
$(pubdir)/wstart: wstart
	cp $< $@


$(rootprefix)/etc/pam.d:
	mkdir -p $@
$(rootprefix)/etc/pam.d/httpd: $(rootprefix)/etc/pam.d
	cp httpd.pam $@

publish: $(rootprefix)/etc/pam.d/httpd
