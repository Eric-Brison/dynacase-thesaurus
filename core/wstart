#!/bin/bash

pubdir="/home/httpd/what";
/bin/cp $pubdir/WHAT/index.php $pubdir


# link images file to be used in several applications
if [ ! -d $pubdir/Images ] ; then
    mkdir $pubdir/Images
fi
if [ ! -d $pubdir/Docs ] ; then
    mkdir $pubdir/Docs
fi
pushd $pubdir/Images > /dev/null
ln -sf ../*/Images/* .
popd > /dev/null

pushd $pubdir/Docs > /dev/null
ln -sf ../*/Docs/* .
popd > /dev/null
#refresh version identificator
$pubdir/wsh.php --api=refreshjsversion >/dev/null
#clear current sessions
/bin/rm -f /var/run/php/sess_*

